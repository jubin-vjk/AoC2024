#include <iostream>
#include <queue>

using namespace std;

int main() {

    priority_queue<int> list1, list2;

    int number1, number2, sum = 0;

    while (cin >> number1 >> number2) {
        list1.push(number1);
        list2.push(number2);
    }

    while(!list1.empty() && !list2.empty()) {
        sum += abs(list1.top()-list2.top());
        list1.pop();
        list2.pop();
    }
    cout << sum << endl;    

    return 0;
}
